<!-- form register new user -->
<form action="/api/users" method="POST" id="add_user" class="row g-3 needs-validation" novalidate>

  <div class="col-md-4 col-sm-4 text-white" title="Username">
    <label for="validationCustomUsername" class="form-label">Username</label>
    <div class="input-group has-validation">
      <span class="input-group-text" id="inputGroupPrepend">@</span>
      <input type="text" name="username" class="form-control" id="validationCustomUsername" placeholder="@lufy.mugiwara"
        aria-describedby="inputGroupPrepend" required>
      <div class="invalid-feedback">
        Please input your username.
      </div>
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>
  </div>

  <div class="col-md-4 col-sm-4 text-white" title="First Name">
    <label for="validationCustom01" class="form-label">First name</label>
    <input type="text" name="firstName" class="form-control" id="validationCustom01" placeholder="Mugiwara" required>
    <div class="valid-feedback">
      Looks good!
    </div>
  </div>

  <div class="col-md-4 col-sm-4 text-white" title="Last Name">
    <label for="validationCustom02" class="form-label">Last name</label>
    <input type="text" name="lastName" class="form-control" id="validationCustom02" placeholder="Lufy" required>
    <div class="valid-feedback">
      Looks good!
    </div>
  </div>

  <div class="col-md-4 col-sm-4 text-white" title="Gender">
    <label for="validationCustom07" class="form-label">Gender</label>
    <select name="gender" class="form-select" id="validationCustom07" required>
      <option selected disabled value="">Choose...</option>
      <option>Male</option>
      <option>Female</option>
    </select>
    <div class="invalid-feedback">
      Please select a valid Gender.
    </div>
  </div>

  <div class="col-md-4 col-sm-4 text-white" title="Email">
    <label for="validationCustom06" class="form-label">Email</label>
    <input type="text" name="email" class="form-control" id="validationCustom06" placeholder="lufy@mugiwara.pirate.pk"
      required>
    <div class="valid-feedback">
      Looks good!
    </div>
  </div>

  <div class="col-md-4 col-sm-4 text-white" title="Phone Number">
    <label for="validationCustom08" class="form-label">Phone Number</label>
    <input type="tel" name="phoneNumber" class="form-control" id="validationCustom08" placeholder="0123-4567-8910"
      required>
    <div class="valid-feedback">
      Looks good!
    </div>
  </div>

  <div class="col-md-6 col-sm-6 text-white" title="Address">
    <label for="validationCustom03" class="form-label">Address</label>
    <input type="text" name="address" class="form-control" id="validationCustom03" required>
    <div class="invalid-feedback">
      Please provide a valid address.
    </div>
  </div>

  <div class="col-md-3 col-sm-3" title="Zip Code">
    <label for="validationCustom05" class="form-label text-white">Zip</label>
    <input type="text" name="zipCode" class="form-control" id="validationCustom05" required>
    <div class="invalid-feedback">
      Please provide a valid zip.
    </div>
  </div>

  <div class="col-md-3 col-sm-3" title="DOB">
    <label for="validationCustom04" class="form-label text-white">Date of Birth</label>
    <input type="date" name="dob" id="validationCustom04" class="form-control" required>
    <div class="invalid-feedback">
      Please select a valid date of birth.
    </div>
  </div>

  <!-- include password validation -->
  <%- include('_passValidation') %>
    <!-- include password validation -->

    <div class="col-12" title="Terms">
      <div class="form-check text-white">
        <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
        <label class="form-check-label" for="invalidCheck">
          Agree to terms and conditions
        </label>
        <div class="invalid-feedback">
          You must agree before submitting.
        </div>
      </div>
    </div>

    <div class="col-12" title="button">
      <button class="btn btn-primary" type="submit">Submit form</button>
      <button class="btn btn-danger" onclick="cancel()" type="button">Cancel</button>
    </div>
</form>